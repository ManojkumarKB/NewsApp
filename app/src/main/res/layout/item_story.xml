<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="#CDEAF7"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:elevation="@dimen/_5sdp">

    <ImageView
        android:id="@+id/icClose"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        />

    <TextView
        android:id="@+id/storyId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/neon_red"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        tools:text="2343224"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_18sdp"/>

    <TextView
        android:id="@+id/textTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/storyId"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/storyType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/textTypeLabel"
        app:layout_constraintTop_toTopOf="@+id/textTypeLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/lightBlue"
        android:gravity="left"
        tools:text="Story"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_18sdp"/>

    <TextView
        android:id="@+id/textTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/textTypeLabel"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/storyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/textTypeLabel"
        app:layout_constraintTop_toTopOf="@+id/textTitleLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/blue"
        android:gravity="left"
        android:paddingBottom="@dimen/_10sdp"
        tools:text="Throw away your usb cable"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_18sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>